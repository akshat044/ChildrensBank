package in.akshat.api_gateway.security;

 
import org.springframework.security.core.Authentication;
import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.springframework.security.authentication.ReactiveAuthenticationManager;
import org.springframework.security.authentication.UsernamePasswordAuthenticationToken;
import reactor.core.publisher.Mono;
import org.springframework.stereotype.Component;

import java.util.Collections;
import java.util.List;

@Component
public class JwtReactiveAuthenticationManager implements ReactiveAuthenticationManager {

    private final JwtUtil jwtUtil;

    public JwtReactiveAuthenticationManager(JwtUtil jwtUtil) {
        this.jwtUtil = jwtUtil;
    }

    @Override
    public Mono<Authentication> authenticate(Authentication authentication) {
        String token = (authentication == null) ? null : (String) authentication.getCredentials();

        if (token == null || token.isBlank()) {
            return Mono.empty();
        }

        try {
            String email = jwtUtil.extractEmail(token);
            if (email == null || !jwtUtil.validateToken(token, email)) {
                return Mono.empty();
            }

            // Optionally map roles/claims here; keeping minimal (no authorities)
            List<SimpleGrantedAuthority> authorities = Collections.emptyList();

            UsernamePasswordAuthenticationToken auth =
                    new UsernamePasswordAuthenticationToken(email, token, authorities);

            return Mono.just(auth);

        } catch (Exception ex) {
            return Mono.empty();
        }
    }
}
